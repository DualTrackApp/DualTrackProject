<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dt_navy"
    android:padding="24dp">

    <include
        android:id="@+id/logo"
        layout="@layout/include_dualtrack_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:textColor="@color/dt_white"
        android:textColorHint="@color/dt_white_60"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:background="@drawable/bg_edit_outline"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:imeOptions="actionNext"
        android:textColor="@color/dt_white"
        android:textColorHint="@color/dt_white_60"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:background="@drawable/bg_edit_outline"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <Spinner
        android:id="@+id/spRoleLogin"
        android:entries="@array/roles_array"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_spinner_white"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/dt_orange"
        android:background="@drawable/bg_button_white_pill"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/spRoleLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnRegisterNav"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/dt_orange"
        android:background="@drawable/bg_button_white_pill"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnForgotPasswordNav"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Forgot Password"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/dt_orange"
        android:background="@drawable/bg_button_white_pill"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/btnRegisterNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
