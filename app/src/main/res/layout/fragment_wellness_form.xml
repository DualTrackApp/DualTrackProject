<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etMood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mood today"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etEnergy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Energy level (1â€“10)"
        app:layout_constraintTop_toBottomOf="@id/etMood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnSubmitWellness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit Wellness Check"
        app:layout_constraintTop_toBottomOf="@id/etEnergy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>