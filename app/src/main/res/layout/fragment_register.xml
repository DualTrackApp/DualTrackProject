<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dt_navy"
    android:padding="24dp">

    <include
        android:id="@+id/logo"
        layout="@layout/include_dualtrack_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="56dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select your role and team"
        android:textColor="@color/dt_white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp" />

    <Spinner
        android:id="@+id/spRoleRegister"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_spinner_white"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spTeamRegister"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_spinner_white"
        app:layout_constraintTop_toBottomOf="@id/spRoleRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnContinueRegister"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/dt_orange"
        android:background="@drawable/bg_button_white_pill"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/spTeamRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnBackRegister"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/dt_orange"
        android:background="@drawable/bg_button_white_pill"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/btnContinueRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
