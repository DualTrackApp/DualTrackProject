<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/dt_navy"
    tools:context=".ui.forms.AbsenceFormFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/tvAbsenceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absence Request Form"
        android:textColor="@color/dt_white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Reason Input -->
    <EditText
        android:id="@+id/etReason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Reason for absence"
        android:background="@drawable/dt_input_outline"
        android:padding="16dp"
        android:textColor="@color/dt_white"
        android:textColorHint="#9AA0A6"
        app:layout_constraintTop_toBottomOf="@id/tvAbsenceTitle"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Date Input -->
    <EditText
        android:id="@+id/etDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date (MM/DD/YY)"
        android:inputType="date"
        android:background="@drawable/dt_input_outline"
        android:padding="16dp"
        android:textColor="@color/dt_white"
        android:textColorHint="#9AA0A6"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etReason"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Additional Notes -->
    <EditText
        android:id="@+id/etNotes"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:hint="Additional notes (optional)"
        android:gravity="top"
        android:background="@drawable/dt_input_outline"
        android:padding="16dp"
        android:textColor="@color/dt_white"
        android:textColorHint="#9AA0A6"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmitAbsence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:background="@drawable/dt_button_pill_white_orange"
        android:paddingVertical="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etNotes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
