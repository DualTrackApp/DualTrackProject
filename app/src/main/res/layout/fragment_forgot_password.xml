<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dt_navy"
    android:padding="24dp">

    <include
        android:id="@+id/logo"
        layout="@layout/include_dualtrack_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp" />

    <EditText
        android:id="@+id/etEmailReset"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:imeOptions="actionDone"
        android:textColor="@color/dt_white"
        android:textColorHint="@color/dt_white_60"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:background="@drawable/bg_edit_outline"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="72dp" />

    <Button
        android:id="@+id/btnSendReset"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Send Reset Email"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/dt_orange"
        android:background="@drawable/bg_button_white_pill"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/etEmailReset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/dt_orange"
        android:background="@drawable/bg_button_white_pill"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/btnSendReset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
